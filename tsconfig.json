{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "types": ["@testing-library/jest-dom/jest-globals"],
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["dom", "esnext"],
    "declaration": false,
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "./packages",
    "./packages/storybook/.storybook/*.ts",
    "./jest.config.ts",
    "./tests"
  ],
  "exclude": ["**/node_modules", "**/dist", "**/.turbo"]
}
