{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["dom", "esnext"],
    "declaration": false,
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "baseUrl": "./"
  },
  "include": ["packages", "packages/storybook/.storybook/*.ts", "typing.d.ts"],
  "exclude": ["**/node_modules", "**/dist", "**/.turbo"]
}
