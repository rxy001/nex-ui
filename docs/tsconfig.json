{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "jsx": "preserve",
    "customConditions": ["source"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "./app",
    "./components",
    "./mdx-components.ts",
    "./middleware.ts",
    "./next-env.d.ts",
    ".next/types/**/*.ts",
    "./next.config.ts",
    "./content",
    "./nextraTheme"
  ],
  "exclude": []
}
