{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"]
    },
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "incremental": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "customConditions": ["source"]
  },
  "include": [
    "./types.d.ts",
    "./app",
    "./mdx-components.tsx",
    "./middleware.ts",
    "./next-env.d.ts",
    ".next/types/**/*.ts",
    "./next.config.ts",
    "./content",
    "./nextraTheme",
    "./components"
  ],
  "exclude": []
}
